<aura:component implements="forceCommunity:layout" access="global">
    <aura:attribute name="column2" type="Aura.Component[]" required="false"/>
    <aura:attribute name="column1" type="Aura.Component[]" required="false"/>
    <lightning:layout verticalAlign="stretch" class="slds-grid">
        <lightning:layoutItem flexibility="auto" class="slds-size_7-of-12">
            <div class="slds-m-around_small slds-color__background_gray-1 slds-color__border_gray-1 slds-p-around_medium slds-p-top_large radius full-height">
                {!v.column1}
            </div>
        </lightning:layoutItem>
        <lightning:layoutItem flexibility="auto" class="slds-size_5-of-12">
            <div class="slds-m-around_small slds-card slds-color__background_gray-1 slds-color__border_gray-1 slds-p-around_medium slds-p-top_large radius full-height">
                {!v.column2}
            </div>
        </lightning:layoutItem>
    </lightning:layout>
</aura:component>